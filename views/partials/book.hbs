<div class="col-5 ps-4">
        <div id="reserve" class="card w-100 p-4 shadow">
              <div id="form-header" class="d-flex justify-content-between align-items-center">
                <h5 class="d-inline-block card-title ps-2 mt-2" style="font-weight: 400;">
                  {{#if bookingInfo}}
                    <strong>${{bookingRoom.price}}</strong><small> /night</small></h5>
                  {{else}}
                    Add dates for prices</h5>
                  {{/if}}
                  <div class="rate">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#ff385c" class="bi bi-star-fill" viewBox="0 0 16 16">
                      <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                    </svg>
                    <span><small><strong>4.71</strong></span><span class="review">(9 review)</small></span>
                  </div>
              </div>

{{#if flashMessages.success}}
    <div class="alert alert-success mb-1">&#10004 {{flashMessages.success}}</div>
    {{/if}}
    {{#if flashMessages.danger}}
    <div class="alert alert-danger mb-1">
    {{#each flashMessages.danger}}
    <span class="px-2">&#10004 {{this}}  </span>
    {{/each}}
    </div>
    {{/if}}

              <form id="reserve-form" class="mb-0" method="POST" action="/reserve/{{bookingRoom._id}}/confirm">
              <div id="booking-forms" class="my-3 ">
                <div class="form-group py-2 my-0 row" id="form-row" style="border: none;">
                  <div class="col pe-0 mr-2 input-daterange" style="border-right: 1px solid lightgray; margin-right: 1rem;">
                    <label for="check-in" class="form-label mb-0 ps-0">Check-in</label>
                    <input type="text" class="form-control py-0 form-bdr pickers start-date" id="picker2" name="startDate" date-provide="datepicker" placeholder="Add dates"></input>
                  </div>
                  <div class="col ps-0 input-daterange" style="border: none;">
                    <label for="check-out" class="form-label mb-0 ps-0">Check-out</label>
                    <input type="text" class="form-control py-0 form-bdr end-date" id="end-date2" name="endDate" date-provide="datepicker" placeholder="Add dates"></input>
                  </div>
                </div>
<hr class="m-0">
                <div class="form-group py-2 my-0 row" style="border:none;">
                  <label for="guest" class="form-label mb-0 ps-1">Guests</label>
                  <select class="form-control py-0 form-bdr" id="guest" >
                    <option value="1">1 guest</option>
                    <option value="2">2 guests</option>
                    <option value="3">3 guests</option>
                    <option value="4">4 guests</option>
                  </select>
                </div>  
              </div>

                <div class="form-group submit">
                  <button type="submit" value="Submit" id="book-confirm" class="btn py-0">Confirm Booking</button>
                </div>
              </form>

{{!-- CALCULATION --}}
{{#if bookingInfo}}
 <div class="text-center mb-3"><small>You won't be charged yet</small></div>
<div class="d-flex-column">
  <div class="d-flex justify-content-between">
    <span class="d-block"><u>${{bookingRoom.price}} x {{bookingInfo.numStays}} nights</u></span><span class="d-block">${{bookingInfo.totalPriceBeforeTax}}</span>
  </div>
  <div class="d-flex justify-content-between">
    <span class="d-block"><u>Cleaning & Service fee</u></span><span class="d-block">${{bookingInfo.serviceFee}}</span>
  </div>
  <div class="d-flex justify-content-between">
    <span class="d-block"><u>Occupancy taxes</u></span><span class="d-block">${{bookingInfo.tax}}</span>
  </div>
</div>
<hr>
<div class="d-flex justify-content-between mb-2">
  <span class="d-block"><strong>Total</strong></span><span class="d-block"><strong>${{bookingInfo.totalPriceAfterTax}}</strong></span>
</div>
{{/if}}

            </div>  {{!-- RESERVER CONTAINER --}}